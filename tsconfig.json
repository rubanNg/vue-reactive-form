{
  "compilerOptions": {
    "target": "es6",                 
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM",
    ],
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}