{
  "compilerOptions": {
    "target": "es6",                 
    "module": "commonjs",
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM",
    ],
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}